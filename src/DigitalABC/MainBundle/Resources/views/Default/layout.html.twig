{% extends '::base.html.twig' %}

{% block html %}data-ng-app="abcApp" {% endblock %}

{% block title %}Digital ABC{% endblock %}

{% block meta %}
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width">
  <link rel="icon" type="image/png" href="{{ asset('images/favicon.png') }}">
{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
  <!--[if IE 9]>
  <link rel="stylesheet" href="{{ asset('css/ie9.css') }}">
  <![endif]-->
  <link rel="stylesheet" href="{{ asset('css/fonts/bebas-neue/bebas-neue.css') }}">
  <link rel="stylesheet" href="{{ asset('css/fonts/permianserif/permianserif-regular.css') }}">
  <link rel="stylesheet" href="{{ asset('css/fonts/permianserif/permianserif-bold.css') }}">
  <link href="//vjs.zencdn.net/4.6/video-js.css" rel="stylesheet">

{% endblock %}

{% block body_attr %}data-ng-controller="HeaderController" data-ng-class="{'is-locked': menuOpen !== null && menuOpen}" {% endblock %}

{% block body %}
  <a class="nav-overlay" data-ng-class="{'is-visible': menuOpen !== null && menuOpen}" data-ng-click="toggleMenu()"></a>
  <nav class="nav" data-ng-class="{'is-visible': menuOpen !== null && menuOpen, 'is-hidden': menuOpen !== null && !menuOpen}">
    <div class="nav-toggle-icon">{% include 'DigitalABCMainBundle:Default:Includes/svg/menu-icon-close.html.twig' with {'class': 'symbol', 'click': 'toggleMenu()'} %}</div>
    <h2 class="nav--header">Navigation</h2>
    <div class="nav--item-wrapper">
      <a href="/#/quiz" class="nav--item" data-ng-class="setActiveMenuItem('/quiz')">Ta' Quizzen!</a>
      <a href="/#/video" class="nav--item" data-ng-class="setActiveMenuItem('/video')">Se videoerne</a>
      <a href="/#/music-video" class="nav--item" data-ng-class="setActiveMenuItem('/music-video')">Musikvideo: "Kom med mig"</a>
    </div>
    <div class="nav--item-wrapper">
      <a href="/#/for-laererne" class="nav--item" data-ng-class="setActiveMenuItem('/for-laererne')">For lærerne</a>
      <a href="/#/for-laererne/digital-parathed" class="nav--sub-item" data-ng-class="setActiveMenuItem('/for-laererne/digital-parathed')">Digital parathed (1 lektion)</a>
      <a href="/#/for-laererne/sidste-omgang" class="nav--sub-item" data-ng-class="setActiveMenuItem('/for-laererne/sidste-omgang')">Sidste omgang (2 lektioner)</a>
      <a href="/#/for-laererne/farvel-forvalt-lingo" class="nav--sub-item" data-ng-class="setActiveMenuItem('/for-laererne/farvel-forvalt-lingo')">#FarvelForvaltLingo (4 lektioner)</a>
    </div>
    <div class="nav--item-wrapper">
      <a href="/#/om-projektet" class="nav--item" data-ng-class="setActiveMenuItem('/om-projektet')">Om projektet</a>
      <a href="http://digamb.dk/" class="nav--item" target="_blank">Digamp.dk - Demomiljø</a>
    </div>
  </nav>

  <header class="header" role="banner">
    <div class="header--inner">
      <a href="{{ path('digitalabc_main_default_index') }}" title="Digital ABC" class="header--logo">
        {% include 'DigitalABCMainBundle:Default:Includes/svg/logo.html.twig' with {'symbol': 'logo-symbol', 'text': 'logo-text'} %}
      </a>
      <div class="nav-toggle-icon">{% include 'DigitalABCMainBundle:Default:Includes/svg/menu-icon.html.twig' with {'class': 'symbol', 'click': 'toggleMenu()'} %}</div>
    </div>
  </header>

  <div class="animation-overlay js-animation-overlay"></div>

  <div class="video-close-icon" data-ng-show="showVideo" data-ng-click="stopVideo()">{% include 'DigitalABCMainBundle:Default:Includes/svg/menu-icon-close.html.twig' with {'class': 'symbol', 'click': ''} %}</div>

{% endblock %}


{% block scripts %}
  <!-- Script imports -->
  <script src="{{ asset('js/libraries/jquery-1.11.1.min.js') }}"></script>
  <script src="{{ asset('js/libraries/angular-1.2.16.min.js') }}"></script>
  <script src="{{ asset('js/libraries/angular-route-1.2.16.js') }}"></script>
  <script src="{{ asset('js/libraries/angular-touch-1.2.16.js') }}"></script>
  <script src="{{ asset('js/libraries/angular-animate-1.2.16.js') }}"></script>
  <script src="{{ asset('js/libraries/angular-scroll.min.js') }}"></script>
  <script src="{{ asset('js/libraries/angulartics.min.js') }}"></script>
  <script src="{{ asset('js/libraries/angulartics-ga.min.js') }}"></script>

  <!-- Base -->
  <script src="{{ asset('js/app.js') }}"></script>
  <script src="{{ asset('js/main/routing.js') }}"></script>

  <!-- Controllers -->
  <script src="{{ asset('js/main/controllers.js') }}"></script>
  <script src="{{ asset('js/quiz/controllers.js') }}"></script>

  <!-- Directives -->
  <script src="{{ asset('js/main/directives.js') }}"></script>

  <!-- Services -->
  <script src="{{ asset('js/quiz/factory.js') }}"></script>
  <script src="//vjs.zencdn.net/4.6/video.js"></script>

  <script>
