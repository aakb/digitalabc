<!DOCTYPE html>
<html data-ng-app="abcApp">
<head>
    <title>Digital ABC</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width">
    {% block metatags %}{% endblock %}
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/fonts/bebas/bebas.css">
</head>
<body data-ng-controller="HeaderController">
    <a class="close-nav" data-ng-class="{'is-visible': menuOpen !== null && menuOpen}" data-ng-click="toggleMenu()"></a>
    <nav class="nav" data-ng-class="{'is-visible': menuOpen !== null && menuOpen}">
        <img class="toggle-nav-icon" src="/images/menu-close.png" data-ng-click="toggleMenu()">
        <div class="nav--item-wrapper">
            <a href="#" class="nav--item">Ta' Quizzen!</a>
            <a href="#" class="nav--item">Se videoerne</a>
            <a href="#" class="nav--item">Musikvideo: "Kom med mig"</a>
        </div>
    </nav>

    <header class="header" role="banner">
        <div class="header--inner">
            <a href="{{ path('digital_abc_main_homepage') }}" title="Digital ABC" class="header--logo"><img src="/images/logo.png"></a>
            <img class="toggle-nav-icon" src="/images/menu.png" data-ng-click="toggleMenu()">
        </div>
    </header>

    {% block body %}{% endblock %}

    <!-- Global script imports -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular-animate.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular-route.js"></script>
    <script src="/js/app.js"></script>
    <script src="/js/main/controllers.js"></script>

    {% block javascripts %}{% endblock %}
</body>
</html>
